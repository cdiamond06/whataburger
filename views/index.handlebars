<div class = "title">
<h1> WhataBurger! </h1>
<img class="port-imgs" src="assets/img/burger.jpg" alt="">
</div>

<div class = "first">
<h2>Burgers that you have not ate</h2>
	<ul>
	{{#each burg}}
		{{#unless this.devoured}}
			<li >
				{{this.burger_name}}

				<form action = "/{{this.id}}?_method=PUT" method ="POST">
				<input type = "hidden" name ="devoured" value = "true">
				<button type = "submit"> Eat! </button>
				</form>
			</li>
		{{/unless}}
	{{/each}}			
	</ul>
</div>	

<div class= "second">
<h2> Burgers that you have Devoured! </h2>
	<ul>
		{{#each burg}}
			{{#if this.devoured}}
				<li>
				{{this.burger_name}}
				</li>
			{{/if}}
		{{/each}}
	</ul>
</div>

<div class= "third">
<h2> Add a Burger to Eat </h2>
<form class ="create-update-form" action='/' method="POST">

	<div class="form-group">
		<label for="burger">Burger to Add:</label>
		<input type="text" id = "burger" name = "burger_name">
	</div>
	<div class="form-group">
	<label for ="dev "></label>
	<input type="radio" name ="devoured" value = "1" checked> Eaten Already <br>
	<input type="radio" name= "devoured" value = "0">Want to eat
	</div>

	<button type="submit"> ADD BURGER </button>

</form>	
</div>		
